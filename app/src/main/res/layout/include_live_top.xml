<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/top_title_back"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/title_button_search"
        />

    <!--<Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>-->

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slideTabLayout"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="15dp"
        tl:tl_textSelectColor="@color/white"
        tl:tl_textUnselectColor="@color/white20"
        tl:tl_textsize="16sp"
        tl:tl_tab_padding="10dp"
        tl:tl_indicator_margin_bottom="3dp"
        />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/title_button_more"
        />
</LinearLayout>