<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:endColor="@color/black50"
                android:startColor="@color/black20"
                />
            <stroke android:color="@color/tag_gray" android:width="1dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:endColor="@color/black50"
                android:startColor="@color/black20"
                />
        </shape>
    </item>

</selector>